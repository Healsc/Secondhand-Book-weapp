.img {
    padding: 20rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    background-color: #ffffff;
    margin-top: 4rpx;
    margin-bottom: 4rpx;
}

.img .img-item {
    height: 300rpx;
    flex-basis: 33%;
    padding: 4rpx 4rpx;
}

.img .img-item image {
    width: 100%;
    height: 100%;
}

.text-red {
    color: var(--red)!important;
}